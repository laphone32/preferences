{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": [".git/", "compile_flags.txt", "compile_commands.json", ".vim/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },

  // Needed for type formatting on multiline strings
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "diagnostic.refreshOnInsertMode": true,

  // Customise
  "diagnostic.warningSign": "!!",

  // Metals
  "metals.serverVersion": "0.8.0+66-2c63fb7c-SNAPSHOT",
  "metals.bloop-sbt-already-installed": "false"
}

