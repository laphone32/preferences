{
  "languageserver": {
    "groovy": {
      "command": "java",
      "args" : ["-jar", "/Users/jlin/tmp/projects/groovy-language-server/build/libs/groovy-language-server.jar"],
      "filetypes": ["groovy"]
     },
  },

  // Needed for type formatting on multiline strings
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "diagnostic.refreshOnInsertMode": true,

  // Customise
  "diagnostic.errorSign": ">>",
  "diagnostic.warningSign": "!!",
  "diagnostic.infoSign": "->",
  "diagnostic.hintSign": "**",

  // Clangd
  "clangd.arguments": ["--background-index"],

  // Metals
//  "metals.serverVersion": "0.9.0+87-bab412a2-SNAPSHOT",
  "metals.bloop-sbt-already-installed": "false",

  // gopls
  "go.goplsOptions": {
    "usePlaceholders": true,
    "completeUnimported": true
  },

  // python
  "python.jediEnabled": false
}

