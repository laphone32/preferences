{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": [".git/", "compile_flags.txt", "compile_commands.json", ".vim/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash"],
      "ignoredRootPaths": ["~"]
    },
    "groovy": {
      "command": "java",
      "args" : ["-jar", "/Users/jlin/tmp/projects/groovy-language-server/build/libs/groovy-language-server.jar"],
      "filetypes": ["groovy"]
     },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true,
        "completeUnimported": true
      }
     }
  },

  // Needed for type formatting on multiline strings
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "diagnostic.refreshOnInsertMode": true,

  // Customise
  "diagnostic.errorSign": ">>",
  "diagnostic.warningSign": "!!",
  "diagnostic.infoSign": "->",
  "diagnostic.hintSign": "**",

  // Metals
  "metals.serverVersion": "0.8.2+8-cd5f3388-SNAPSHOT",
  "metals.bloop-sbt-already-installed": "false"
}

