{
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true,
        "**/target": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    "editor.fontSize": ${PREFERENCES_VSCODE_EDITOR_FONT_SIZE},
    "editor.fontFamily": "'DejaVuSansM Nerd Font Mono'",
    "editor.lineNumbers": "on",
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "workbench.editor.showTabs": "none",

    "debug.console.fontSize": ${PREFERENCES_VSCODE_DEBUG_FONT_SIZE},
    "java.debug.logLevel": "info",
    "markdown.preview.fontSize": ${PREFERENCES_VSCODE_MARKDOWN_FONT_SIZE},
    
    "scm.inputFontSize": ${PREFERENCES_VSCODE_SCM_FONT_SIZE},
    "window.zoomLevel": 0.4,
    "vim.useSystemClipboard": true,
    "vim.leader": "\\",


    "workbench.colorTheme": "Nord",
    "workbench.panel.defaultLocation": "right",

    "search.exclude": {
        "**/.git": true,
        "**/target": true,
        "**/.metals": true,
        "**/.workspace": true,
        "**/.logs": true
    },

    "apc.stylesheet": {
        ".anysphere-markdown-container-root": "font-size: ${PREFERENCES_VSCODE_APC_FONT_SIZE}px; line-height: 1.4;"
    },
    "metals.sbtScript": "sbt",
    "metals.autoImportBuilds": "all",

    "terminal.integrated.scrollback": 50000,
    "terminal.integrated.fontSize": ${PREFERENCES_VSCODE_TERMINAL_FONT_SIZE},
    "terminal.integrated.fontFamily": "'CodeNewRoman Nerd Font Mono', monospace",
    "terminal.integrated.suggest.enabled": false,
    "terminal.integrated.profiles.osx": {
        "preferences_bash": {
            "path": "$DEFAULT_SHELL",
            "args": ["--login"]
        }
    },
    "terminal.integrated.defaultProfile.osx": "preferences_bash",

    "terminal.integrated.profiles.linux": {
        "preferences_bash": {
            "path": "$DEFAULT_SHELL",
            "args": ["--login"]
        }
    },
    "terminal.integrated.defaultProfile.linux": "preferences_bash",
}

