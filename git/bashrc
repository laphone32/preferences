#!/usr/bin/env bash

source $PREFERENCES_DIR/util/override.sh
source $PREFERENCES_DIR/util/utils.sh

PREFERENCES_GIT=$PREFERENCES_DIR/git

if [ -f $HOME/.git-prompt.sh ]; then
    source $HOME/.git-prompt.sh
fi

if [ -f $HOME/.git-completion.sh ]; then
    source $HOME/.git-completion.sh
fi

if type -t __git_ps1 | grep -q '^function$' 2>/dev/null; then
    GIT_PS1_SHOWDIRTYSTATE=true
    GIT_PS1_SHOWSTASHSTATE=true
    GIT_PS1_SHOWUNTRACKEDFILES=true
    GIT_PS1_SHOWUPSTREAM="auto"
    GIT_PS1_SHOWCOLORHINTS=true

    PS1='\[\033[0;32m\]\u\[\e[0m\]:\w\[\033[0;33m\]$(__git_ps1)\[\e[0m\]# '
fi

export GIT_EDITOR=vim

wrap '
    local config=$(findNearestParent $PWD ".gitconfig")
    if [ -z "$config" ]; then
        config=$PREFERENCES_GIT/config
    fi
' '' git '-c include.path=$config -c core.excludesfile=$PREFERENCES_GIT/ignore -c user.useConfigOnly=true -c pull.rebase=true'

